<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidtrip.plugins.searchablespinnerexample.MainActivity"
    tools:showIn="@layout/activity_main">


    <com.androidtrip.plugins.searchablespinner.SearchableSpinner
        android:id="@+id/SearchableSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        app:BoarderColor="@color/colorPrimary"
        app:BordersSize="1dp"
        app:RevealEmptyText="Touch to select"
        app:ShowBorders="true"
        app:SpinnerExpandHeight="250dp" />

    <com.androidtrip.plugins.searchablespinner.SearchableSpinner
        android:id="@+id/SearchableSpinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        app:BoarderColor="@android:color/holo_blue_light"
        app:BordersSize="1dp"
        app:DoneSearchTintColor="@android:color/white"
        app:RevealViewBackgroundColor="@android:color/holo_blue_light"
        app:SearchViewBackgroundColor="@android:color/holo_blue_light"
        app:ShowBorders="true"
        app:SpinnerExpandHeight="0dp"
        app:StartSearchTintColor="@android:color/white" />

    <com.androidtrip.plugins.searchablespinner.SearchableSpinner
        android:id="@+id/SearchableSpinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        app:DividerHeight="0.5dp"
        app:DoneSearchTintColor="@android:color/holo_purple"
        app:ItemsDivider="@color/gray_400"
        app:RevealEmptyText="Touch to select"
        app:RevealViewBackgroundColor="@android:color/holo_purple"
        app:SearchViewBackgroundColor="@android:color/secondary_text_dark"
        app:ShowBorders="true"
        app:SpinnerExpandHeight="300dp"
        app:StartSearchTintColor="@android:color/white" />

    <com.androidtrip.plugins.searchablespinner.SearchableSpinner
        android:id="@+id/SearchableSpinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        app:BordersSize="4dp"
        app:DividerHeight="0.5dp"
        app:DoneSearchTintColor="@android:color/holo_purple"
        app:ItemsDivider="@color/gray_400"
        app:RevealEmptyText="Touch to select"
        app:RevealViewBackgroundColor="@android:color/holo_purple"
        app:SearchViewBackgroundColor="@android:color/secondary_text_dark"
        app:ShowBorders="false"
        app:SpinnerExpandHeight="300dp"
        app:StartSearchTintColor="@android:color/white" />

</LinearLayout>
